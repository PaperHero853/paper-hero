<%= render 'shared/navbar' %>

<div class="container">
  <h2> Create a game</h2>
  <hr>
  <%= simple_form_for(@game) do |f| %>
    <div class="row justify-content-center">
      <div class="col-auto">
          <p>Choose your opponent</p>
          <%= form_tag users_path, method: :get do %>
            <%= text_field_tag :query,
              params[:query],
              classe: "form-control",
              placeholder: "Type your opponent username"
            %>
            <%= submit_tag "Search", class: "btn btn-flat" %>
          <% end %>

          <%= f.association :users, include_hidden: false, :label_method => lambda { |user| "#{user.username}" } %>
      </div>
      <div>
          <%= f.submit "Create", class: "btn btn-flat" %>
      </div>
    </div>
  <% end %>
</div>
