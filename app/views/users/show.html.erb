<h1>coucou je suis <%= current_user.username %></h1>
<div>
  <% if current_user.photo.attached? %>
    <div class="show-photo">
      <%= cl_image_tag current_user.photo.key, width: 400, height: 400, crop: :fill %>
    </div>
  <% else %>
    <div class="card-photo">
        <%= image_tag "logo.png", width: 400, height: 400, crop: :fill %>
    </div>
  <% end %>
</div>
<%= link_to "Create a new game", new_game_path(@game), class: "btn btn-gradient" %>
<%= link_to "Join existing game", games_path(@game), class: "btn btn-gradient" %>
<%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn btn-gradient" %>
