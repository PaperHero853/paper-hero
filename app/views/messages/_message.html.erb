<div id="message-<%= message.id %>" class = "message-user-<%= message.user.id %> ">
<small>
  <% if message.user.photo.attached? %>
    <%= cl_image_tag message.user.photo.key, class: "avatar" %>
  <% else %>
    <%= image_tag "leader.png", class: "avatar" %>
  <% end %>
  <strong class="txt-small"><%= message.user.username %></strong>
  <i><%= message.created_at.strftime("%b %e at %k:%M") %></i>
</small>
  <p class= "txt-small"><%= message.content %></p>
</div>
